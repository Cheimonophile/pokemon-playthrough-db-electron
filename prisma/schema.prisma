generator client {
  provider = "prisma-client-js"
  output   = "./prisma-client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Version {
  id         Int       @id @default(autoincrement())
  name       String    @unique
  generation Int
  pokemon    Pokemon[]

  ball Ball[]
}

model Pokemon {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  version   Version @relation(fields: [versionId], references: [id])
  versionId Int
}

model Ball {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  version   Version @relation(fields: [versionId], references: [id])
  versionId Int
}
